<div class="container">
  <div class="well">
 
 <div class="row">
   <div class="col-xs-8">
       <div class="panel panel-primary">
  <div class="panel-heading center">
     <h2 class="title"><%= @post.title %></h2>
      </div>
           
           <div class="panel-body">

     <p class="date"><b>Submitted:</b> <%= time_ago_in_words(@post.created_at) %> Ago
         
      <% if current_user.try(:admin?) %>
     | <%= link_to 'Edit', edit_post_path(@post) %> |
     <%= link_to 'Delete', posts_path(@past), method: :delete, data: {confirm: 'are you sure?'} %>
     <% end %>
     </p>

     <p class="body"><%= @post.body.html_safe %></p>
</div>
           </div>
       
     <div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

		<h3>Add a comment:</h3>
    <p>Right click and refresh the comment form if it is not working the first time</p>
		<%= render "comments/form" %>
	</div>
     </div>
     <!-- end of main body-->

